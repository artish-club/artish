type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String! @unique
  about: String
  age: Int!
  posts: [Post!]
  products: [Product!]
  projects: [Project!] @relation(name: "ProjectByUser")
  purchases: [Project!] @relation(name: "PurchasedByUser")
}

type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String
  author: User!
}

type Product {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  description: String
  author: User!
  price: Float! 
  delivery: String
}

type Project {
  id: ID! @id
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  title: String!
  description: String
  author: User! @relation(name: "ProjectByUser")
  customer: User @relation(name: "PurchasedByUser")
  posts: [Post!]
}
